rules:
  indent:
    - 2
    - 2
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - never
  no-console: 0
  prefer-arrow-callback: 0
  func-names: 0
  no-param-reassign: [2, { props: false }]
  max-len: 0 # setted in jscs
  comma-dangle: 0
  object-shorthand: 0
  no-trailing-spaces: 0
  dot-notation: 0
  no-cond-assign: 0
  prefer-template: 0
  no-unused-vars: 0
  new-cap: 0
  default-case: 0
  no-shadow: 0

env:
  es6: true
  node: true
  jasmine: true
  protractor: true

globals:
  module: false
  require: false
  console: false

extends:
  - eslint:recommended
  - airbnb/base

parser: babel-eslint
